# {{ ansible_managed }}

ui = true
disable_mlock = true

storage "raft" {
    path = "/opt/vault/data"
    node_id = "vault01"
}

listener "tcp" {
  address = "{{ host_ip_address }}:8200"
  tls_disable = true
}

api_addr = "http://{{ host_ip_address }}:8200"
cluster_addr = "http://{{ host_ip_address }}:8201"
